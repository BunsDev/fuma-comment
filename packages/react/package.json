    "concurrently": "^8.2.2",
    "eslint-config-custom": "workspace:*",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-lightningcss": "^1.0.0",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "tailwindcss-radix": "^3.0.3",
    "tsconfig": "workspace:*",
